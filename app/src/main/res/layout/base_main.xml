<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_h"
        android:background="@color/color_blue">
        
        <ImageView
            android:id="@+id/base_title_left_p"
            android:layout_width="@dimen/base_title_left_p_s"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/mar_12"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/base_title_left_t"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_black"
            android:textSize="@dimen/txt_s_16"
            android:text="@string/base_title_t"
            android:gravity="center"
            android:layout_toEndOf="@+id/base_title_left_p"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/mar_12"
            android:maxEms="5"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/base_title_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/txt_s_16"
            android:text="@string/base_title_t"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:maxEms="5"
            android:ellipsize="end"
            android:singleLine="true"/>


        <ImageView
            android:id="@+id/base_title_right_p"
            android:layout_width="@dimen/base_title_left_p_s"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/mar_12"
            android:layout_centerVertical="true"
            android:src="@mipmap/right"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/base_title_right_t"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_black"
            android:textSize="@dimen/txt_s_16"
            android:text="@string/base_title_t"
            android:gravity="center"
            android:layout_toStartOf="@+id/base_title_right_p"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mar_12"
            android:maxEms="5"
            android:ellipsize="end"
            android:singleLine="true"/>

    </RelativeLayout>
    
    

</android.support.constraint.ConstraintLayout>